<% unless current_user == user %>
  <% if current_user.following?(@user) %>
    <%= form_with(url: relationship_path(@user), method: :delete, remote: true) do |f| %>
      <%= f.hidden_field :following_id %>
      <%= f.submit 'フォロー中', class: 'btn btn-outline-secondary' %>
    <% end %>
  <% else %>
    <%= form_with(url: relationships_path(@user), method: :post, remote: true) do |f| %>
      <%= f.hidden_field :following_id, value: @user.id %>
      <%= f.submit 'フォローする', class: 'btn btn-outline-secondary' %>
    <% end %>
  <% end %>
<% else %>
<% end %>
<br>