<%= render partial: 'layouts/header' %>
<div class="container-fluid container-main">
  <div class="row">
    <% if user_signed_in? %>
  	<%= render partial: 'layouts/sidebar', user: @user %>
    <% end %>

  	<div class="col col-md-10">
    	<%= render partial: 'layouts/flash' %>

    	<% if params[:sort] == 'all_topics' %>
    	  <h2>トピック（全<%= @topics_all.count %>件中<%= @topics.count %>件を表示）</h2>
    	<% elsif params[:sort] == 'user_topics' %>
  	    <h2><%= @user.name %>さんのトピック（全<%= @topics_all.count %>件中<%= @topics.count %>件を表示）</h2>
      <% else params[:sort] == 'category' %>
        <h2>カテゴリ「<%= render 'topics/category', category: @category %>」のトピック（全<%= @topics_all.count %>件中<%= @topics.count %>件を表示）</h2>
  	  <% end %>

      <div>
  	    <%= render 'topics_index', topics: @topics %>
        <div class="offset-3 kaminari">
          <%= paginate @topics, class: 'paginate' %>
        </div>
      </div>
    </div>

  </div>
</div>
