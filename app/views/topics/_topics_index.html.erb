<table>
 <thead>
    <tr>
      <th></th>
        <th>更新日時</th>
	    <th>タイトル</th>
	    <th>カテゴリ</th>
	    <th>コメント</th>
	</tr>
  </thead>
  <tbody>
    <% topics.each do |topic| %>
      <tr>
	    <td>
	      <%= link_to topic_path(topic) do %>
	      <%= attachment_image_tag(topic, :eyecatch_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %>
	      <% end %>
	    </td>
		<td><%= simple_time(topic[:updated_at]) %></td>
		<td style="width: 40%;">
			<%= link_to topic_path(topic), style: 'color: #664539;' do %>
			<%= topic.title %>
			<% end %>
		</td>
		<td>
		  <%= link_to topics_path(page: 'category', category: topic.category), style: "color: #664539;" do %>
		  <%= render 'topics/category', category: topic.category %>
		  <% end %>
		</td>
		<td class="tc_count" style="text-align: center;"><%= topic.topic_comments.count %></td>
		<% if user_signed_in? && topic.user_id == current_user.id %>
	      <td><%= link_to 'タイトルを編集', edit_topic_path(topic), class: 'btn-sm btn-success' %></td>
		  <td><%= link_to 'トピを削除', topic_path(topic), method: :delete, class: 'btn-sm btn-danger' %></td>
	    <% end %>
	  </tr>
    <% end %>
  </tbody>
</table>
