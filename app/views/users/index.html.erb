<div class="col col-lg-10 space">
  <% if params[:sort] == 'all_users' %>
  <h2>全ユーザ一覧（<%= @users.count %>/<%= @users_all.count %>名）</h2>
  <% elsif params[:sort] == 'followings' %>
  　<h2><%= @user.name %>さんのフォロー一覧（<%= @users.count %>/<%= @users_all.count %>名）</h2>
  <% else params[:sort] == 'followers' %>
  <h2><%= @user.name %>さんのフォロワー一覧（<%= @users.count %>/<%= @users_all.count %>名）</h2>
  <% end %>

  <%= render 'users/index', users: @users %>

  <div class="offset-3 kaminari">
    <%= paginate @users, class: 'paginate' %>
  </div>

</div>
