<%= render partial: 'layouts/header' %>
<div class="container">
  <div class="row">
  	<%= render partial: 'layouts/sidebar', user: @user %>
  	<div class="col col-xs-10">
  	<%= render partial: 'layouts/flash' %>
  	  <h1><%= @user.name %>さん のブログ一覧</h1>
        <table>
      	 <thead>
      	  <tr>
      	    <th></th>
      	    <th>日付</th>
      		<th>タイトル</th>
      	  </tr>
      	</thead>
      	<tbody>
          <% @user.blogs.each do |blog| %>
      	  <tr>
      		  <td><%= attachment_image_tag(blog, :eyecatch_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %></td>
      		  <td><%= blog.updated_at %></td>
      		  <td><%= blog.title %></td>
      		</tr>
          <% end %>
      	</tbody>
      </table>
  	</div>
  </div>
</div>
