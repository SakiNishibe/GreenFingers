<%= render partial: 'layouts/header' %>
<div class="container">
  <div class="row">
  	<%= render partial: 'layouts/sidebar', user: @user %>
  	<div class="col col-xs-10">
  	  <%= render partial: 'layouts/flash' %>

      <div>
        <h3><%= @user.name %>さんが育てている植物</h3>
        <% if @user.plants.exists? %>
          <div id="plant-<%= @user.id %>">
          <%= render 'plants/index', user: @user %>
          </div>
        <% else %>
          <h6>まだ植物が登録されていません。</h6>
        <% end %>
      </div>

      <div id="edit-plant-<%= @user.id %>">
        <h3>新しく登録</h3>
        <%= render 'plants/form', plant: @plant %>
      </div>

    </div>
  </div>
</div>

