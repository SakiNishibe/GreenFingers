<%= render partial: 'layouts/header' %>
<div class="container">
  <div class="row">
  	<%= render partial: 'layouts/sidebar', user: @user %>
  	<div class="col col-xs-10">
  	<%= flash[:alert] %>
  	  <h1><%= @user.name %>さん のブログ一覧</h1>
        <table>
      	 <thead>
      	  <tr>
      	    <th></th>
      	    <th>日付</th>
      		<th>タイトル</th>
      	  </tr>
      	</thead>
      	<tbody>
      	  <tr>
      	  	<% @user.blogs.each do |blog| %>
      		  <td><%= attachment_image_tag(blog, :eyecatch_img, ) %></td>
      		  <td><%= blog.updated_at %></td>
      		  <td><%= blog.title %></td>
      		<% end %>
      	  </tr>
      	</tbody>
      </table>
  	</div>
  </div>
</div>
