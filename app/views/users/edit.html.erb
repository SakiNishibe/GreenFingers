<%= render partial: 'layouts/header' %>
<div class="container">
  <div class="row">
  	<%= render partial: 'layouts/sidebar', user: @user %>
  	<div class="col col-xs-10">
      <%= render partial: 'layouts/flash' %>
  	  <%= form_with(model: @user, local: true) do |f| %>
  	    <div class="user_field">
  	    <%= f.label :お名前 %>
  	    <%= f.text_field :name %>
  	    </div>

  	    <div class="user_field">
  	    <%= f.label :ひとこと %>
  	    <%= f.text_field :introduction %>
  	    </div>

  	    <div class="user_field">
  	    <%= f.label :アイコン画像 %><br>
  	    <%= attachment_image_tag(@user, :profile_img, :fill, 100, 100, fallback: 'no_img.jpg', size: '100x100') %>
  	    <%= f.attachment_field :profile_img %>
  	    </div>

  	    <div class="user_field">
  	    <%= f.submit '更新する！' %>
  	    </div>
  	  <% end %>
      <%= link_to '退会する', user_path, method: :delete, class: 'btn btn-sm btn-danger' %>
  	</div>
  </div>
</div>