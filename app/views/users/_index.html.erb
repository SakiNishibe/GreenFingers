<table>
 	<thead>
 	  <tr>
 	    <th></th>
 	    <th>名前</th>
 	    <th>ひとこと</th>
 	  </tr>
 	</thead>
	<tbody>
 	  <% users.each do |user| %>
  	  <tr>
  	    <td>
          <% if user.score >= 0.8 %>
            <%= link_to user_path(user) do %>
            <%= attachment_image_tag(user, :profile_img, fallback: 'no_img.jpg', size: '50x50', class: 'border-gold') %>
            <% end %>
          <% elsif user.score >= 0.6 %>
            <%= link_to user_path(user) do %>
            <%= attachment_image_tag(user, :profile_img, fallback: 'no_img.jpg', size: '50x50', class: 'border-silver') %>
            <% end %>
          <% else %>
 	  	      <%= link_to user_path(user) do %>
	  	      <%= attachment_image_tag(user, :profile_img, fallback: 'no_img.jpg', size: '50x50') %>
            <% end %>
  	      <% end %>
  	    </td>
  	    <td>
          <%= user.name %>
        </td>
  	    <td><%= user.introduction %></td>
  	  </tr>
 	  <% end %>
  </tbody>
</table>
