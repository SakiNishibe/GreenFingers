<table>
 	<thead>
 	  <tr>
 	    <th></th>
 	    <th>名前</th>
 	    <th>ひとこと</th>
 	  </tr>
 	</thead>
	<tbody>
 	  <% users.each do |user| %>
  	  <tr>
  	    <td>
 	  	      <%= link_to user_path(user) do %>
	  	      <%= attachment_image_tag(user, :profile_img, fallback: 'no_img.jpg', size: '50x50') %>
  	      <% end %>
  	    </td>
  	    <td>
          <%= user.name %>
          <i class="far fa-laugh-beam" style="color: #ff69b4;"></i>
        </td>
  	    <td><%= user.introduction %></td>
  	  </tr>
 	  <% end %>
  </tbody>
</table>
