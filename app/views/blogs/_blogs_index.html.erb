<table class="himaji">
  <thead>
	  <tr>
      <th></th>
      <th>日付</th>
      <th>タイトル</th>
      <th>花の名前</th>
   		<th>タグ</th>
      <th>スタンプ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% blogs.each do |blog| %>
  	  <tr>
   		  <td>
          <%= link_to user_path(blog.user) do %>
          <%= attachment_image_tag(blog, :eyecatch_img, fallback: 'no_img.jpg', size: '50x50') %>
          <% end %>
        </td>
   		  <td><%= simple_time(blog[:updated_at]) %></td>
   		  <td style="width: 40%;">
          <%= link_to blog_path(blog), style: 'color: #664539;' do %>
          <%= blog.title %>
          <% end %>
        </td>
        <td>
          <%= link_to plant_path(blog.plant), style: 'color: #664539;' do %>
          <%= blog.plant.name %>
          <% end %>
        </td>
        <td><%= render 'blogs/tag_list', tag_list: blog.tag_list %></td>
        <td style="text-align: center;"><%= blog.stamps.count %></td>
        <% if blog.user_id == current_user.id %>
          <td><%= link_to '編集', edit_blog_path(blog), class: 'btn-sm btn-success' %></td>
          <td><%= link_to '削除', blog_path(blog), method: :delete, class: 'btn-sm btn-danger' %></td>
        <% end %>
 	  	</tr>
    <% end %>
 	</tbody>
</table>