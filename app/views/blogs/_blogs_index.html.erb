<table class="himaji">
  <thead>
	  <tr>
      <th></th>
      <th>花の名前</th>
      <th>タイトル</th>
      <th>名前</th>
   		<th>タグ</th>
      <th>スタンプ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% blogs.each do |blog| %>
  	  <tr>
   		  <td>
          <%= link_to blog_path(blog) do %>
          <%= attachment_image_tag(blog, :eyecatch_img, fallback: 'no_img.jpg', size: '50x50') %>
          <% end %>
        </td>
   		  <td>
          <%= link_to blog.plant.name, plant_path(blog.plant_id), style: 'color: #664539;' %>
        </td>
   		  <td style="width: 35%;">
          <%= link_to blog_path(blog), style: 'color: #664539;' do %>
          <%= blog.title %>
          <% end %>
        </td>
        <td style="width: 15%;">
          <%= link_to blog.user.name, user_path(blog.user_id), class: 'letter' %> 
        </td>
        <td><%= render 'blogs/tag_list', tag_list: blog.tag_list %></td>
        <td class="stamp_count" style="text-align: center;"><%= blog.stamps.count %></td>
        <% if blog.user_id == current_user.id %>
          <td style="width: 5%;"><%= link_to '編集', edit_blog_path(blog), class: 'btn-crud-green' %></td>
          <td style="width: 5%;"><%= link_to '削除', blog_path(blog), method: :delete, class: 'btn-crud-red' %></td>
        <% end %>
 	  	</tr>
    <% end %>
 	</tbody>
</table>