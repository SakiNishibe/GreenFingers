<table>
  <thead>
	  <tr>
      <th></th>
      <th>日付</th>
   		<th>タイトル</th>
      <th>スタンプ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% blogs.each do |blog| %>
  	  <tr>
   		  <td><%= attachment_image_tag(blog, :eyecatch_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %></td>
   		  <td><%= simple_time(blog[:updated_at]) %></td>
   		  <td style="width: 40%;"><%= blog.title %></td>
        <td><%= blog.stamps.count %></td>
        <td><%= link_to '読む', blog_path(blog), class: 'btn-sm btn-info' %></td>
        <% if blog.user_id == current_user.id %>
          <td><%= link_to '編集', edit_blog_path(blog), class: 'btn-sm btn-success' %></td>
          <td><%= link_to '削除', blog_path(blog), method: :delete, class: 'btn-sm btn-danger' %></td>
        <% end %>
 	  	</tr>
    <% end %>
 	</tbody>
</table>