<%= render partial: 'layouts/header' %>
<div class="container">
  <div class="row">
  	<%= render partial: 'layouts/sidebar', user: @user %>
  	<div class="col col-xs-10">
  	<%= render partial: 'layouts/flash' %>
  	  <h1>ブログ一覧</h1>
        <table>
      	 <thead>
      	  <tr>
      	    <th></th>
      	    <th>日付</th>
      		<th>タイトル</th>
      	  </tr>
      	</thead>
      	<tbody>
          <% @blogs.each do |blog| %>
      	  <tr>
      		  <td><%= attachment_image_tag(blog, :eyecatch_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %></td>
      		  <td><%= blog.updated_at %></td>
      		  <td><%= blog.title %></td>
            <td><%= link_to '読む', blog_path(blog), class: 'btn-sm btn-info' %></td>
            <% if blog.user_id == current_user.id %>
              <td><%= link_to '編集', edit_blog_path(blog), class: 'btn-sm btn-success' %></td>
              <td><%= link_to '削除', blog_path(blog), method: :delete, class: 'btn-sm btn-danger' %></td>
            <% end %>
      		</tr>
          <% end %>
      	</tbody>
      </table>
  	</div>
  </div>
</div>
