<% topic_comments.each do |tc| %>
<div class="container-fluid" style="padding-top: 30px;">
  <div class="row">
    <div class="col--md-2">
      <%= attachment_image_tag(tc.user, :profile_img, fallback: 'no_img.jpg', size: '50x50') %>
    </div>
    <div class="col-md-4"><%= tc.user.name %></div>
    <div class="col-md-4"><%= simple_time(tc[:created_at]) %></div>
  </div>
  <div class="row">
    <%= attachment_image_tag(tc, :image, size: '200x200') %>
  </div>
  <div class="row">
    <div class="col-md-10">
      <%=safe_join(tc.comment.split("\n"),tag(:br))%>
    </div>
    <div class="col-md-2">
      <%= link_to '削除', topic_topic_comments_path(topic_id: @topic.id, tc_id: tc.id), method: :delete, remote: true, class: 'btn-crud-red' %>
    </div>
  </div>
</div>
<% end %>


