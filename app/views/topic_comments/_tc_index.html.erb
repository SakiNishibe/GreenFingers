<table>
  <tbody>
    <% topic_comments.each do |tc| %>
      <tr>
        <td>
          <%= attachment_image_tag(tc.user, :profile_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %>
          <%= tc.user.name %>
          <%= simple_time(tc[:created_at]) %>
        </td>
      </tr>
      <tr>
        <td><%= attachment_image_tag(tc, :image, :fill, 200, 200) %></td>
      </tr>
      <tr>
        <td><%= tc.comment %></td>
        <% if tc.user_id == current_user.id %>
        <td><%= link_to '削除', topic_topic_comments_path(topic_id: @topic.id, tc_id: tc.id), method: :delete, remote: true, class: 'btn-sm btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

