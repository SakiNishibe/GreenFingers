<table>
  <tbody>
    <% topic_comments.each do |tc| %>
      <tr>
        <td>
          <%= attachment_image_tag(tc.user, :profile_img, fallback: 'no_img.jpg', size: '50x50') %>
          <%= tc.user.name %>
          <%= simple_time(tc[:created_at]) %>
        </td>
      </tr>
      <tr>
        <td><%= attachment_image_tag(tc, :image, size: '200x200') %></td>
      </tr>
      <tr>
        <td><%=safe_join(tc.comment.split("\n"),tag(:br))%></td>
        <% if user_signed_in? && tc.user_id == current_user.id %>
        <td style="width: 5%;"><%= link_to '削除', topic_topic_comments_path(topic_id: @topic.id, tc_id: tc.id), method: :delete, remote: true, class: 'btn-crud-red' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

