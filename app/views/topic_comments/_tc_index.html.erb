<table>
  <tbody>
    <% topic_comments.each do |tc| %>
      <tr>
        <td>
          <%= attachment_image_tag(tc.user, :profile_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %>
          <%= tc.user.name %>
        </td>
      </tr>
      <tr>
        <td><%= attachment_image_tag(tc, :image, :fill, 200, 200) %></td>
      </tr>
      <tr>
        <td><%= tc.comment %></td>
        <% if tc.user_id == current_user.id %>
        <td><%= link_to '削除', topic_topic_comments_path(tc.id), method: :delete, class: 'btn-sm btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= form_with(model: @topic_comment, url: topic_topic_comments_path(@topic.id), local: true) do |f| %>
  	<h6>新規コメント</h6><br>
  	<%= attachment_image_tag(@user, :profile_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %>
  		<%= @user.name %>
  	<%= f.attachment_field :image %>
  	<%= f.text_area :comment, size: '90x5' %>
  	<%= f.submit '送信！', class: 'btn-sm btn-info' %>
  <% end %>
</div>
