<%= render partial: 'layouts/header' %>
<div class="container">
  <div class="row">
  	<%= render partial: 'layouts/sidebar', user: @user %>

  	<div class="col col-xs-10">
  	  <%= render partial: 'layouts/flash' %>
  	  <h2>下書き一覧</h2>
  	  <table>
  	    <thead>
  	      <tr>
  		    <th>投稿日時</th>
  	        <th>タイトル</th>
  	        <th colspan="2"></th>
  		  </tr>
  	    </thead>
  	    <tbody>
  	      <% @drafts.each do |draft| %>
  	      	<tr>
  	      	  <td><%= draft.updated_at %></td>
  	      	  <td><%= draft.title %></td>
  	      	  <td><%= link_to '編集', edit_draft_path(draft), class: 'btn-sm btn-info' %></td>
  	        </tr>
  	      <% end %>
  	    </tbody>
  	  </table>
    </div>

  </div>
</div>
