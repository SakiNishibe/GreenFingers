<% unless current_user == user %>
  <% if current_user.following?(@user) %>
    <%= form_with(url: user_relations_path(@user.user_relationship.id), method: :delete, local: true) do |f| %>
      <%= f.hidden_field :following_id %>
      <%= f.submit 'フォロー中', class: 'btn btn-outline-secondary' %>
    <% end %>
  <% else %>
    <%= form_with(url: user_relations_path, method: post, local: true) do |f| %>
      <%= f.hidden_field :following_id, value: @user.id %>
      <%= f.submit 'フォローする', class: 'btn btn-outline-secondary' %>
    <% end %>
  <% end %>
<% else %>
<% end %>