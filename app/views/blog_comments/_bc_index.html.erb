<table>
  <tbody>
    <% blog_comments.each do |bc| %>
      <tr>
        <td>
          <%= attachment_image_tag(bc.user, :profile_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %>
          <%= bc.user.name %>
        </td>
      </tr>
      <tr>
        <td><%= attachment_image_tag(bc, :image, :fill, 200, 200) %></td>
      </tr>
      <tr>
        <td><%= bc.comment %></td>
        <% if bc.user_id == current_user.id %>
        <td><%= link_to '削除', blog_blog_comments_path(bc), method: :delete, class: 'btn-sm btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
