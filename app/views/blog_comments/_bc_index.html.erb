<table>
  <tbody>
    <% blog_comments.each do |bc| %>
      <tr>
        <td>
          <%= attachment_image_tag(bc.user, :profile_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %>
          <%= bc.user.name %>
        </td>
      </tr>
      <tr>
        <td><%= attachment_image_tag(bc, :image, :fill, 200, 200) %></td>
      </tr>
      <tr>
        <td><%= bc.comment %></td>
        <% if bc.user_id == current_user.id %>
        <td><%= link_to '削除', blog_blog_comments_path(bc), method: :delete, class: 'btn-sm btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= form_with(model: @blog_comment, url: blog_blog_comments_path(@blog.id), local: true) do |f| %>
  	<h6>新規コメント</h6><br>
  	<%= attachment_image_tag(@user, :profile_img, :fill, 50, 50, fallback: 'no_img.jpg', size: '50x50') %>
  		<%= @user.name %>
  	<%= f.attachment_field :image %>
  	<%= f.text_area :comment, size: '90x5' %>
  	<%= f.submit '送信！', class: 'btn-sm btn-info' %>
  <% end %>
</div>
