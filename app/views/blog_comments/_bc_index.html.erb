<% blog_comments.each do |bc| %>
<div class="container-fluid" style="padding-top: 30px;">
  <div class="row">
    <div class="col--md-2">
      <%= attachment_image_tag(bc.user, :profile_img, fallback: 'no_img.jpg', size: '50x50') %>
    </div>
    <div class="col-md-4"><%= bc.user.name %></div>
    <div class="col-md-4"><%= simple_time(bc[:created_at]) %></div>
  </div>
  <div class="row">
    <%= attachment_image_tag(bc, :image, size: '200x200') %>
  </div>
  <div class="row">
    <div class="col-md-10">
    <%=safe_join(bc.comment.split("\n"),tag(:br))%>
    </div>
    <div class="col-md-2">
      <%= link_to '削除', blog_blog_comments_path(blog_id: @blog.id, bc_id: bc.id), method: :delete, remote: true, class: 'btn-crud-red' %>
    </div>
  </div>
</div>
<% end %>
